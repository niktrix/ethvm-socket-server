{
  "testEnvironment": "node",
  "rootDir": "src",
  "moduleNameMapper": {
    "^@app/(.*)": "<rootDir>/$1"
  },
  "moduleFileExtensions": ["js", "json", "ts", "node"],
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
